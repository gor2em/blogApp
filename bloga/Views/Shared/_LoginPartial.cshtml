@if (User.IsInRole("Admin"))
{
    <a href="/Panel" class="btn btn-info">Panel</a>
}

@if (User.Identity.IsAuthenticated)
{

    <a href="/User/Exit?redirectUrl=@this.Request.RawUrl" class="btn btn-danger ">Çıkış Yap</a>
    <a href="" class="btn" style="color:#f1f1f1;border-bottom:1px solid #00ff90">@User.Identity.Name</a>
}
else
{
    <a href="/User/Login" class="btn btn-success">Giriş Yap</a>
}


@if (!User.Identity.IsAuthenticated)
{
    <a href="/User/SignUp" class="btn btn-dark">Üye Ol</a>

}



