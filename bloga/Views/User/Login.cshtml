
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form action="/User/Login" method="post">
    <div class="col-lg-12" style="padding:50px">
        <div class="row">
            <h1>Giriş Yap</h1>
            <input type="text" name="USERNAME" placeholder="kullanıcı adı" class="form-control" required />
            <input type="text" name="PASSWORD" placeholder="şifre"  class="form-control" required />
            <input type="submit" name="username" value="Giriş Yap" class="btn btn-success form-control" />
        </div>
    </div>

      
</form>
